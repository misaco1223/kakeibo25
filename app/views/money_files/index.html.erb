<h1>家計簿一覧</h1>

<div class="card bg-base-100 w-96 shadow-xl">
  <ul class="list-none">
    <% @files.each do |file| %>
      <li >
        <figure>
          <img
            src="https://img.daisyui.com/images/stock/photo-1606107557195-0e29a4b5b4aa.webp"
            alt="PiggyBank"
            width="100" height="100"
          />
        </figure>
        <div class="card-body">
          <h2 class="card-title"><%= file.file_title %></h2>
          <p><%= file.description %></p>
          <div class="card-actions justify-end">
            <%= button_to budgets_path(file), method: :get, class: "btn btn-primary" do %>
              Check Now
            <% end %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>