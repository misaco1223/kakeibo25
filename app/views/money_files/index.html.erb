<body class="bg-secondary">
  <header>
    <div class="navbar fixed top-0 left-0 w-full z-50">
      <a class="btn btn-ghost text-xl gray-900" href="/"><%= @user.name %> - 家計簿一覧</a>
    </div>
  </header>

    <!-- スペース入れたいだけ -->
  <div class="navbar">
    <%= link_to new_money_file_path, class: "btn btn-primary", data: { turbo: false } do %>家計簿を新規作成<% end %>
    <%= link_to user_path(@user), class: "btn" do %>ユーザー情報へ<% end %>
    <%= link_to "カテゴリーを表示", categories_path, class: "btn" %>
  </div>

  <br><br>
  <% if @money_files.present? %>
  <div class="carousel" style="display: flex; overflow-x: auto; gap: 16px; padding: 16px; scroll-snap-type: x mandatory; -webkit-overflow-scrolling: touch; margin-bottom: 40px; max-width: 100%;">
    <% @money_files.each do |file| %>
    <div class="carousel-item" style="flex: 0 0 auto; width: 320px; text-align: left; scroll-snap-align: center; border-radius: 8px; border: 1px solid #ccc;">
        <div class="card" style="display: flex; text-left; ">
        <div class="card-body">
            <figure class="text-left">
            <img
                src="https://img.daisyui.com/images/stock/photo-1606107557195-0e29a4b5b4aa.webp"
                alt="PiggyBank"
            />
            </figure>
            <h2 class="card-title" style="font-size: 1.25rem; font-weight: bold; margin-bottom: 8px;"><%= file.title %></h2>
            <p><%= file.description %></p>
            <br>
            <div class="card-actions" style="display: flex; margin-top: auto;">
              <%= link_to money_file_path(file), class: "btn btn-primary" do %>このファイルをCheck Now<% end %>
              <%= link_to edit_money_file_path(file), class: "btn" do %>編集<% end %>
              <%= link_to money_file_path(file), method: :delete, data: { turbo_method: :delete }, class: "btn btn-danger" do %>削除<% end %>
            </div>
        </div>
        </div>
    </div>
    <% end %>
  </div>
  <% else %>
    <p> 家計簿の登録がありません</p>
  <% end %>

    <!-- 
  <button class="bg-gray-900 hover:bg-gray-800 text-white rounded px-4 py-2">黒字のみ表示</button>
  <button class="btn">赤字のみ表示</button -->
</body>