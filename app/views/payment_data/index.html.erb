<h1>出金一覧</h1>

<div class="card bg-base-100 w-96 shadow-xl">
  <ul class="list-none">
    <% @payments.each do |payment| %>
      <li >
        <figure>
          <img
            src="https://img.daisyui.com/images/stock/photo-1606107557195-0e29a4b5b4aa.webp"
            alt="PiggyBank"
            width="100" height="100"
          />
        </figure>
        <div class="card-body">
          <h2 class="card-title">
            <%= payment.amount %></h2>
        </div>
      </li>
    <% end %>
  </ul>
</div>